<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	 http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<!-- 如果prototype类型:则默认就是使用的时候创建，不会再启动的时候自动创建
	<bean id="baseAction" class="cn.it.shop.action.BaseAction" scope="prototype">
		<property name="categoryService" ref="categoryService"></property>
		<property name="accountService" ref="accountService"></property>
	</bean>

	<bean id="categoryAction" class="cn.it.shop.action.CategoryAction"
		scope="prototype" parent="baseAction">
	</bean>
	
	<bean id="accountAction" class="cn.it.shop.action.AccountAction"
		scope="prototype" parent="baseAction">
	</bean>
	-->
	
	<!-- 此action 没有用于数据存储，也不需要调用业务逻辑 
	<bean id="sendAction" class="cn.it.shop.action.SendAction"/>
	-->
	
	
</beans>